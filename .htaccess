
RewriteEngine On


# Category page (supports alphanumeric slugs with hyphens)
RewriteRule ^category/([0-9a-zA-Z\-]+)$ products.php?product_category=$1

# Product details (numeric IDs)
RewriteRule ^Product-details/([0-9]+)$ product_details.php?id=$1

# Buy page (numeric IDs)
RewriteRule ^Buy/([0-9]+)$ order_details.php?p_id=$1

# Login page (this might need to point to login.php)
RewriteRule ^Login$ login.php
# Register page
RewriteRule ^Sign-Up$ register.php
# Logout page
RewriteRule ^Log-out$ php/logout.php

# Orders page
RewriteRule ^Orders$ my_orders.php

# Order status page (numeric order ID)
RewriteRule ^Your-Order/([0-9]+)$ order_status.php?order_id=$1

RewriteRule ^Cart$ cart.php
RewriteRule ^Checkout/id-([0-9a-zA-Z\-]+)/amount-([0-9]+)/qty-([0-9]+)$ checkout.php?id=$1&amount=$2&qty=$3
RewriteRule ^Search/([0-9a-zA-Z\-]+)$ search.php?search=$1

